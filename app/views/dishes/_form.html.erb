
<%= form_for @dish, :html => {:multipart => true} do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
   <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :processing %><br>
    <%= f.text_area :processing %>
  </div>
  <div class="field">
    <%= f.label :food_id %><br>
    <%=f.collection_select :food_id, Dish.list_foods, :id, :food_name%>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%=f.collection_select :category_id, Dish.list_categories, :id, :name%>
  </div>
  <div>
   <%= f.label :Buoi %><br>
    <%= f.collection_check_boxes(:id, Day.all, :id, :day_name) do |b| %>
    <%= b.label(class: "check_box") do %>
      <%= b.check_box %>
      <%= b.object.day_name %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-sm btn-success" %>
  </div>
<% end %>
