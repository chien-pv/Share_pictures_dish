
<div id="form">
<%= form_for @dish, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name,'Tên món ăn:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  </div>
   <div class="form-group">
    <%= f.label :image,'Hình ảnh:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
   <%= f.file_field :image %>
  </div>
  </div>
  <div class="form-group">
    <%= f.label :desc,'Mô tả:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%= f.text_area :desc, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :processing,'Phương pháp che bien:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%= f.text_area :processing, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :food_id,'Thành phần chính:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%=f.collection_select :food_id, Dish.list_foods, :id, :food_name, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id,'Loại:', class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%=f.collection_select :category_id, Dish.list_categories, :id, :name, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
   <%= f.label :Buoi,'Buổi:', class: 'col-sm-2 control-label' %><br>
    <div class="col-sm-6">
    <%= f.collection_check_boxes(:id, Day.all, :id, :day_name) do |b| %>
    <%= b.label(class: "check_box") do %>
      <%= b.check_box %>
      <%= b.object.day_name %>
      <% end %>
    <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'col-sm-2 control-label' %><br>
     <div class="col-sm-6">
    <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="link">
  <div class="actions">
    <%= f.submit nil, :class => "btn btn-sm btn-success" %>
  </div>
  </div>
<% end %>
</div>
